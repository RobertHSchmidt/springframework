<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<input-mapper>
		<input-attribute name="name"/>
	</input-mapper>

	<start-state idref="displayDetails" />

	<view-state id="displayDetails" view="showGroupDetails">
		<render-actions>
			<!-- get a group to work with -->
			<bean-action bean="groupService" method="findByPrimaryKey">
				<method-arguments>
					<argument expression="flowScope.name" />
				</method-arguments>
				<method-result name="group" />
			</bean-action>
		</render-actions>

		<transition on="back" to="finish" />
		<transition on="edit" to="editDetails" />
	</view-state>

	<view-state id="editDetails" view="editGroupDetails">
		<render-actions>
			<!-- get a group to work with -->
			<bean-action bean="groupService" method="findByPrimaryKey">
				<method-arguments>
					<argument expression="flowScope.name" />
				</method-arguments>
				<method-result name="group" scope="flow" />
			</bean-action>

			<!-- setup form with group -->
			<action bean="editGroupFormAction" method="setupForm"/>
		</render-actions>

		<transition on="cancel" to="displayDetails" />
		<transition on="submit" to="displayDetails">
			<!-- get updated form data back into group object -->
			<action bean="editGroupFormAction" method="bindAndValidate"/>

			<!-- update database with group in flowScope-->
			<bean-action bean="groupService" method="update">
				<method-arguments>
					<argument expression="flowScope.group" />
				</method-arguments>
			</bean-action>
		</transition>
	</view-state>

	<end-state id="finish" />

	<import resource="detail-group-flow-beans.xml"/>

</flow>