<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="repository"
		class="org.springframework.webflow.execution.repository.continuation.ClientContinuationFlowExecutionRepository">
		<constructor-arg ref="stateRestorer" />
		<constructor-arg>
			<bean class="org.springframework.webflow.conversation.impl.LocalConversationManager">
				<constructor-arg value="-1" />
			</bean>
		</constructor-arg>
	</bean>

</beans>