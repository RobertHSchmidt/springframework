<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:swf="http://www.springframework.org/schema/swf"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/swf
       http://www.springframework.org/schema/swf/spring-swf.xsd">

	<swf:registry id="withPath">
		<swf:location
			path="classpath:org/springframework/webflow/registry/flow1.xml" />
	</swf:registry>

	<swf:registry id="withoutPath">
		<swf:location path="" />
	</swf:registry>

	<swf:registry id="withPathWithWildcards">
		<swf:location
			path="classpath*:org/springframework/webflow/engine/builder/registry/flow*.xml" />
		<swf:location
			path="classpath*:org/springframework/webflow/engine/builder/registry/flows/**/flow*.xml" />
	</swf:registry>

	<swf:executor id="defaultExecutor"
		registry-ref="withPathWithWildcards" />

	<swf:executor id="continuationExecutor"
		registry-ref="withPathWithWildcards" repository="continuation">
		<swf:listener ref="listener1" />
	</swf:executor>

	<swf:executor id="clientExecutor"
		registry-ref="withPathWithWildcards" repository="client">
		<swf:listener ref="listener1" criteria="flow1" />
		<swf:listener ref="listener2" criteria="flow1, flow2, flow3" />
	</swf:executor>

	<bean id="listener1"
		class="org.springframework.webflow.config.TestFlowExecutionListener" />
	<bean id="listener2"
		class="org.springframework.webflow.config.TestFlowExecutionListener" />

</beans>
