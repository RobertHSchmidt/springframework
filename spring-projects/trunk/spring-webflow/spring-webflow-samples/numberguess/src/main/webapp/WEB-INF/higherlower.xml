<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="enterGuess">
	
	<view-state id="enterGuess" view="higherlower.enterGuess">
		<transition on="submit" to="makeGuess"/>
	</view-state>
	
	<action-state id="makeGuess">
		<bean-action bean="game" method="makeGuess">
			<method-arguments>
				<argument expression="requestParameters.guess" parameter-type="int"/>
			</method-arguments>
			<method-result name="guessResult"/>
		</bean-action>
		<transition on="correct" to="showAnswer"/>
		<transition on="*" to="enterGuess"/>
	</action-state>
	
	<end-state id="showAnswer" view="higherlower.showAnswer"/>

	<import resource="higherlower-beans.xml"/>

</flow>