<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayShippingForm">

	<var name="address" class="example.Address"/>
	
	<view-state id="displayShippingForm" view="shippingForm">
		<transition on="submit" to="finish"/>
	</view-state>
	
	<end-state id="finish">
		<output-mapper>
			<mapping source="flowScope.address" target="address"/>
		</output-mapper>
	</end-state>
	
</flow>