<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="render">

	<input-mapper>
		<mapping source="items" target="flowScope.items"/>
		<mapping source="batchSize" target="flowScope.batchSize"/>
	</input-mapper>
	
	<view-state id="render" view="listNavigator">
		<transition on="previous" to="moveBackOnePage"/>
		<transition on="next" to="moveForwardOnePage"/>
		<transition on="gotoPage" to="setCurrentPage"/>
	</view-state>

</flow>