<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayPaymentEditor">

	<view-state id="displayPaymentEditor" view="paymentEditor">
		<transition on="submit" to="finish"/>
	</view-state>
	
	<end-state id="finish">
		<output-mapper>
			<mapping source="new CreditCard(${cardType}, ${name}, ${month}, ${year})" target="creditCard"/>
		</output-mapper>
	</end-state>
	
</flow>