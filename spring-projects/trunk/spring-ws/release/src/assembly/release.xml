<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>release</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>..</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>license.txt</include>
                <include>changelog.txt</include>
                <include>readme.txt</include>
            </includes>
            <lineEnding>dos</lineEnding>
        </fileSet>
        <fileSet>
             <directory>target/docs/api</directory>
             <outputDirectory>/docs/api</outputDirectory>
           </fileSet>
       <fileSet>
            <directory>../spring-ws-samples</directory>
            <outputDirectory>/samples</outputDirectory>
            <includes>
                <include>readme.txt</include>
            </includes>
            <lineEnding>dos</lineEnding>
        </fileSet>
        <fileSet>
            <directory>../spring-ws-samples</directory>
            <outputDirectory>/samples</outputDirectory>
            <includes>
                <include>echo/**</include>
                <include>airline/**</include>
            </includes>
            <excludes>
                <exclude>**/target/**</exclude>
                <exclude>**/target</exclude>
                <exclude>**/*.iml</exclude>
                <exclude>**/META-INF/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>..</directory>
            <outputDirectory>/modules</outputDirectory>
            <includes>
                <include>spring-xml/**/*</include>
                <include>spring-oxm/**/*</include>
                <include>spring-oxm-tiger/**/*</include>
                <include>spring-ws-core/**/*</include>
                <include>spring-ws-security/**/*</include>
            </includes>
            <excludes>
                <exclude>**/target/**</exclude>
                <exclude>**/target</exclude>
                <exclude>**/*.iml</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <scope>runtime</scope>
            <excludes>
                <exclude>org.springframework.ws:spring-xml</exclude>
                <exclude>org.springframework.ws:spring-oxm</exclude>
                <exclude>org.springframework.ws:spring-oxm-tiger</exclude>
                <exclude>org.springframework.ws:spring-ws-core</exclude>
                <exclude>org.springframework.ws:spring-ws-security</exclude>
                <exclude>org.springframework.ws:echo</exclude>
                <exclude>org.springframework.ws:airline</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <scope>runtime</scope>
            <includes>
                <include>org.springframework.ws:spring-xml</include>
                <include>org.springframework.ws:spring-oxm</include>
                <include>org.springframework.ws:spring-oxm-tiger</include>
                <include>org.springframework.ws:spring-ws-core</include>
                <include>org.springframework.ws:spring-ws-security</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/samples</outputDirectory>
            <scope>runtime</scope>
            <includes>
                <include>org.springframework.ws:echo</include>
                <include>org.springframework.ws:airline</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
