<ivyconf>
	<properties file="${ivy.conf.dir}/ivyconf.properties"/>
	<conf defaultResolver="resolverChain"/>
	<resolvers>
		<chain name="resolverChain" returnFirst="true">
			<filesystem name="integration-repo">
				<ivy pattern="${integration.repo.dir}/artifacts/[organisation]/[module]/ivy-[revision].xml"/>
				<artifact pattern="${integration.repo.dir}/artifacts/[organisation]/[module]/[type]s/[artifact]-[revision].[ext]" />
			</filesystem>

			<url name="spring-repo">
				<ivy pattern="http://svn.sourceforge.net/viewcvs.cgi/springframework/repos/repo/[organisation]/[module]/ivy-[revision].xml" />
				<artifact pattern="http://svn.sourceforge.net/viewcvs.cgi/springframework/repos/repo/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
			</url>
			<url name="spring-repo-snapshots">
				<ivy pattern="http://svn.sourceforge.net/viewcvs.cgi/springframework/repos/repo-snapshots/[organisation]/[module]/ivy-[revision].xml" />
				<artifact pattern="http://svn.sourceforge.net/viewcvs.cgi/springframework/repos/repo-snapshots/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
			</url>
			<url name="spring-repo-ext">
				<ivy pattern="http://svn.sourceforge.net/viewcvs.cgi/springframework/repos/repo-ext/[organisation]/[module]/ivy-[revision].xml" />
				<artifact pattern="http://svn.sourceforge.net/viewcvs.cgi/springframework/repos/repo-ext/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
			</url>
			<ivyrep name="ivyrep" />
		</chain>
  </resolvers>
</ivyconf>
