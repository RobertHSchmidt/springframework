<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="http://www.jayasoft.org/misc/ivy/ivy.xsd">

    <info organisation="org.springframework" module="spring-ws-security"/>

    <configurations>
        <conf name="default" extends="xwss"/>
        <conf name="global" visibility="private"/>
        <conf name="buildtime" visibility="private"/>
        <conf name="test" visibility="private"/>
        <!-- public configurations other projects may use -->
        <conf name="xwss" visibility="public" extends="global"/>
    </configurations>

    <dependencies defaultconf="global->default">
        <!-- global (compile, test, runtime) dependencies -->
        <dependency org="apache" name="commons-logging" rev="1.0.4"/>
        <dependency org="org.springframework" name="spring-core" rev="1.2.8"/>
        <dependency org="org.springframework" name="spring-beans" rev="1.2.8"/>
        <dependency org="org.springframework" name="spring-context" rev="1.2.8"/>

        <!-- spring-ws dependencies -->
        <dependency org="org.springframework" name="spring-ws-core" rev="latest.integration"/>

        <!-- acegi depencies -->
        <dependency org="org.acegisecurity" name="acegi-security" rev="1.0.0">
            <!-- Acegi's pom uses 2.0-m2, we are a bit more conservative -->
            <exclude org="org.springframework"/>
            <exclude org="commons-.*" matcher="regexp"/>
            <exclude org="oro"/>
        </dependency>
        <dependency org="org.springframework" name="spring-dao" rev="1.2.8"/>


        <!-- xwss only dependencies -->
        <dependency org="com.sun" name="xws-security" rev="2.0-ea2" conf="buildtime,xwss->default"/>
        <dependency org="com.sun" name="xmlsec" rev="2.0-ea2" conf="buildtime,xwss->default"/>
        <dependency org="javax.xml" name="xmldsig" rev="1.0.1" conf="buildtime,xwss->default"/>
        <dependency org="javax.xml" name="saaj-api" rev="1.2" conf="buildtime,xwss->default"/>
        <dependency org="javax.xml" name="saaj-impl" rev="1.2" conf="buildtime,xwss->default"/>
        <dependency org="javax.activation" name="activation" rev="1.0.2" conf="buildtime,xwss->default"/>
        <dependency org="javax.mail" name="mail" rev="1.3.2" conf="buildtime,xwss->default"/>

        <!-- build time only dependencies -->

        <!-- test time only dependencies -->
        <dependency org="junit" name="junit" rev="3.8.1" conf="test->default"/>
        <dependency org="xmlunit" name="xmlunit" rev="1.0" conf="test->default"/>
        <dependency org="easymock" name="easymock" rev="1.1" conf="test->default"/>
        <dependency org="clover" name="clover" rev="1.3.11" conf="test->default"/>
        <dependency org="org.springframework" name="spring-mock" rev="1.2.8" conf="test->default"/>
    </dependencies>
</ivy-module>