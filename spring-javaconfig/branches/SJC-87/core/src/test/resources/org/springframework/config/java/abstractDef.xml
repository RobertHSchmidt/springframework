<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <!-- Tests that @Configuration bean definitions marked as abstract="true" are not processed -->

	<bean class="org.springframework.config.java.process.ConfigurationPostProcessor" />
		
	<bean class="org.springframework.config.java.ConfigurationPostProcessorTests$AbstractConfig" abstract="true"/>
	
	<!-- Include a non-abstract @Configuration that defines at
	     least one @Bean so we don't throw a MalformedJavaConfigurationException -->
	<bean class="org.springframework.config.java.ConfigurationPostProcessorTests$PlaceholderConfig" abstract="false"/>
	
</beans>
