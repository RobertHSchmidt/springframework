<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:u="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<bean id="configurationInstance"
		class="org.springframework.config.java.ScopingTests$ScopedConfigurationClass" />

	<bean id="scopedProxyClass" factory-bean="configurationInstance"
		factory-method="scopedProxyClass" scope="customScope">
		<aop:scoped-proxy />
	</bean>

	<bean id="scopedProxyInterface" factory-bean="configurationInstance"
		factory-method="scopedProxyInterface" scope="customScope">
		<aop:scoped-proxy proxy-target-class="false" />
	</bean>


	<bean
		class="org.springframework.beans.factory.config.CustomScopeConfigurer">
		<property name="scopes">
			<map>
				<entry key="customScope">
					<bean
						class="org.springframework.config.java.ScopingTests$MyCustomScope" />
				</entry>
			</map>
		</property>
	</bean>

	<bean class="java.lang.Object" />

</beans>