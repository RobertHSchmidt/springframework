<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>

    <class
        name="org.springframework.config.java.Person"
        table="T_PERSON"
        >

        <id
            name="id"
			access="field"
            column="ID">
			<generator class="identity" />
        </id>
		
		<property name="age" column="AGE" access="field" />
		
		<property name="name" column="NAME" access="field" length="55"/>

	</class>
	

</hibernate-mapping>