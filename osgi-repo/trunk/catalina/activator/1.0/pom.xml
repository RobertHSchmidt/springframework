<?xml version="1.0" encoding="UTF-8"?>
<project
		xmlns="http://maven.apache.org/POM/4.0.0"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<artifactId>osgi-repo</artifactId>
		<groupId>org.springframework.osgi</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.springframework.osgi</groupId>
	<artifactId>catalina.start.osgi</artifactId>
	<packaging>bundle</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>Tomcat Catalina OSGi Activator</name>

	<properties>
		<unpack.version>5.5.23</unpack.version>
		<private.packages>org.springframework.osgi.web.tomcat.internal</private.packages>
		<embed-dep>start;scope=provided;inline=true</embed-dep>
		<include.resources>src/main/resources</include.resources>
		<unpack-bundle>true</unpack-bundle>
		<import.packages>
			org.apache.catalina*,
			org.apache.naming.resources*,
			org.osgi.framework;version=1.3,
			org.osgi.service.url;version=1.0,
			*;resolution:=optional
		</import.packages>

	</properties>

	<dependencies>
		<dependency>
			<groupId>tomcat</groupId>
			<artifactId>catalina</artifactId>
			<version>${unpack.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>tomcat</groupId>
			<artifactId>naming-resources</artifactId>
			<version>${unpack.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>osgi_R4_core</artifactId>
			<version>1.0</version>
			<scope>provided</scope>			
		</dependency>
		
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging-api</artifactId>
			<version>1.1</version>
			<scope>provided</scope>
		</dependency>
<!--		
		<dependency>
		  <groupId>org.springframework.osgi</groupId>
		  <artifactId>mx4j.osgi</artifactId>
		  <version>3.0.2-SNAPSHOT</version>
		  <scope>test</scope>
		</dependency>	
		-->
	</dependencies>

	<build>
	<plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
	      <groupId>org.apache.maven.plugins</groupId>
          <configuration>
            <source>1.4</source>
            <target>1.4</target>
            <debug>true</debug>
          </configuration>
      </plugin>
				
	
		<plugin>
		<artifactId>maven-jar-plugin</artifactId>
		<configuration>
		  <archive>  
		    <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
            <manifestEntries>
              <Bundle-Activator>org.springframework.osgi.web.tomcat.internal.Activator</Bundle-Activator>
            </manifestEntries>
		  </archive>
		</configuration>
		</plugin>
	</plugins>
	</build>
</project>
